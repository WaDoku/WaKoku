<div class='page-header'>
  <h1>Alle Icons</h1>
</div>
<%= form_for [:admin, @new_icon], html: { class: "icon-form" } do |f| %>
  <%= f.label "Icon Upload", class: "control-label" %>
  <%= f.file_field :icon %>
  <p class="help-block">(.jpg .png .jpeg .svg) Uploadlimit: 500KB</p>
  <%= submit_tag "Upload", class: "btn btn-default" %>
<% end %>

<% @icons.in_groups_of(6, false) do |group| %>
  <div class="row">
    <% group.each do |icon| %>
      <div class="col-xs-3 col-md-2">
        <div class="thumbnail">
          <img src="<%= icon.icon.url %>" alt="<%= icon.icon.path %>">
          <div class="caption">
            <h4><%= icon.icon.name %></h4>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
